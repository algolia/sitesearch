{
  "name": "instant-site-search",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "bun --filter @algolia/sidepanel-react --filter @algolia/sitesearch-react --filter demo dev",
    "build:react": "bun --filter @algolia/sitesearch-react build && bun --filter @algolia/sidepanel-react build",
    "build:js-bundle": "bun --filter @algolia/sitesearch-react build && bun --filter @algolia/sitesearch-js build",
    "build": "bun run build:react && bun run --filter demo build",
    "dev:demo": "bun --filter demo dev",
    "dev:docs": "bun --filter docs dev",
    "dev:sidepanel": "bun --filter @algolia/sidepanel-react dev",
    "deploy": "bunx gh-pages -d apps/demo/dist"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.1.29",
  "devDependencies": {
    "@biomejs/biome": "2.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.0.0"
  }
}
